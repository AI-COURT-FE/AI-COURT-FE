<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AI_COURT" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- 배경색 -->
        <item name="windowSplashScreenBackground">@color/splash_bg</item>

        <!-- 가운데 로고(아이콘) -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>

        <!-- 로고 크기(너무 크면 잘려 보일 수 있음) -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

        <!-- 스플래시 이후 적용될 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.AI_COURT</item>
    </style>
</resources>